import math

def calculate(a, b, operator):
  """Melakukan perhitungan berdasarkan operasi yang dipilih pengguna."""

  if operator == "+":
    return a + b
  elif operator == "-":
    return a - b
  elif operator == "*":
    return a * b
  elif operator == "/":
    return a / b
  elif operator == "^":
    return a ** b
  elif operator == "ln":
    return math.log(a)
  elif operator == "e^":
    return math.exp(a)
  elif operator == "sin":
    return math.sin(a)
  elif operator == "cos":
    return math.cos(a)
  elif operator == "tan":
    return math.tan(a)
  else:
    raise ValueError("Operator tidak valid.")

def main():
  """Menjalankan aplikasi scientific calculator."""

  # Inisialisasi
  a = float(input("Masukkan bilangan pertama: "))
  operator = input("Masukkan operator: ")
  b = float(input("Masukkan bilangan kedua: "))

  # Perhitungan
  result = calculate(a, b, operator)

  # Output
  print("Hasilnya adalah:", result)

if __name__ == "__main__":
  main()
